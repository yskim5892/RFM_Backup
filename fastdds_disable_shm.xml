<?xml version="1.0" encoding="UTF-8" ?>
<profiles xmlns="http://www.eprosima.com/XMLSchemas/fastRTPS_Profiles">
    <transport_descriptors>
        <!-- Custom UDP Transport (Default is all interfaces) -->
        <transport_descriptor>
            <transport_id>udp_all</transport_id>
            <type>UDPv4</type>
            <!-- No whitelist means bind to all interfaces -->
        </transport_descriptor>
    </transport_descriptors>

    <participant profile_name="udp_only_participant" is_default_profile="true">
        <rtps>
            <!-- Disable built-in transports (SHM, UDPv6, TCP) -->
            <useBuiltinTransports>false</useBuiltinTransports>
            <userTransports>
                <!-- Use only our custom UDP transport -->
                <transport_id>udp_all</transport_id>
            </userTransports>
        </rtps>
    </participant>
</profiles>
